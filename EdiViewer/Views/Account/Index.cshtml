@model ErrorModel
@{
    ViewData["Title"] = "Acceso visor EDI";
    Layout = "_LayoutLogin";
}
<style>
    body {
        padding-top: 10px !important;
        padding-bottom: unset;
    }
</style>
<div class="container">
    <div class="jumbotron mainJumbo">
        <br />
        <div class="divLogo"><img class="imgLogo" src="~/images/logo4TransMini.png" /></div>        
        <div class="card-deck cardLogin">
            <div class="card">
                <div class="card-header">
                    GLC WEB
                </div>
                <div class="card-body">
                    <div class="noShow" style="color:darkred;">
                        Buen día, tenemos problemas técnicos con el enlace de datos<br />
                        La plataforma estará disponible más tarde.
                    </div>
                    <form accept-charset="utf-8" asp-action="LoginIe" method="post">
                        <div class="form-group">
                            <label>Usuario</label>
                            <input class="form-control" id="TxtUser" name="TxtUser" type="text" maxlength="20" />
                        </div>
                        <div class="form-group">
                            <label>Contraseña</label>
                            <input class="form-control" id="TxtPassword" name="TxtPassword" type="password" maxlength="20" />
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary btn-block" type="submit">Ingresar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <br />
    </div>
</div>
<script>
    $.urlParam = function (name) {
        var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
        if (results == null) {
            return null;
        }
        return decodeURI(results[1]) || 0;
    }
    function funcbtnOkMessageBox() {        
        $('#TxtUser').focus();
        setTimeout(function () { $('#TxtUser').focus(); }, 366);
    }
    var serverUrl = window.location.href;
    if (serverUrl.startsWith('http:'))
        window.location.href = serverUrl.replace('http:', 'https:');
    $(document).ready(function () {
        $('#TxtUser').focus();
        error = $.urlParam('error');
        if (error != null) {            
            switch (error) {
                case "USER_INCORRECT":
                    menErrorEdi("Usuario o contraseña incorrectos.");
                    break;
                //case "NO_AUTH":
                //    menErrorEdi("Por favor inicie sesión para usar el sistema.");
                //    break;
                default:                    
                    break;
            }
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            @: menErrorEdi('@Html.Raw(Model.ErrorMessage.Replace(Environment.NewLine, "<br />"))');
        }
    });
</script>